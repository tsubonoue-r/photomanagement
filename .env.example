# =============================================================================
# PhotoManagement Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# Database
# PostgreSQL connection URL (Supabase, Neon, or local)
DATABASE_URL="postgresql://user:password@localhost:5432/photomanagement?schema=public"

# NextAuth.js Authentication
# Generate secret with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# Storage Configuration
# =============================================================================
# STORAGE_TYPE: "local" for development (uses public/uploads/), "s3" for production
STORAGE_TYPE="local"

# S3/R2 Configuration (only required when STORAGE_TYPE=s3)
# For Cloudflare R2:
# STORAGE_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"
# For AWS S3, leave empty or set to AWS region endpoint
STORAGE_ENDPOINT=""
STORAGE_REGION="auto"
STORAGE_ACCESS_KEY_ID=""
STORAGE_SECRET_ACCESS_KEY=""
STORAGE_BUCKET="photos"
# Public URL for accessing stored files (if using CDN)
STORAGE_PUBLIC_URL=""

# Optional: OAuth Providers
# Google OAuth (get from Google Cloud Console)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# Optional: Email Configuration (for password reset)
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASSWORD=""
# EMAIL_FROM="noreply@example.com"
